<div class="text-center">
    <h2>{{title}}</h2>
    <p>{{content}}</p>
    <p>Post created by {{user.name}} on {{format_date date_created}}</p>
  
    {{#if logged_in}}
    <form class="form new-comt-form">
      <div class="form-group">
        <label for="comment-content"><h4>Leave your comment:</h4></label>       
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add to this Post!</button>
      </div>
    </form>
    {{/if}}
    
    {{#each comments as |comment|}}
    <p><small>{{comment.content}}</small></p>
    <hr>
    {{/each}}
</div>

<script src="./js/post.js"></script>
